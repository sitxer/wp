                    +e('label').item
                        input(type="checkbox" value="4")
                        +e('span').text Опция 4
                    +e('label').item
                        input(type="checkbox" value="4")
                        +e('span').text Опция 5
                    +e('label').item
                        input(type="checkbox" value="4")
                        +e('span').text Опция 6
                    +e('label').item
                        input(type="checkbox" value="4")
                        +e('span').text Опция 7
    section.content
        .container
            .row
                .col-xl-3.col-lg-4
                    +b('div').left-filter#lfilter
                        +e('div').sort-selection
