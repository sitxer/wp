                            +e('h4').box-title С инпутом
                            +e('input')(type='text' placeholder='Введите текст').box-input
                        +e('div').box
                            +e('span').box-close
                            +e('h4').box-title С dropdown
                            +e('div').box-select-wrap
                                +e('select')(name='select').box-select
                                    option option 1
                                    option option 2
                                    option option 3
                                    option option 4
                        +e('div').box
                            +e('span').box-close
                            +e('h4').box-title Общий
                            +e('div').box-half-wrap
                                +e('div').box-half
                                    +e('div').box-select-wrap
                                        +e('select')(name='select').box-select
                                            option меньше
                                            option больше
                                +e('div').box-half
                                    +e('input')(type='text' placeholder='').box-input
                .col-xl-9.col-lg-8
                    .cards-wrap
                        each val in [{ img: 'https://via.placeholder.com/777x666.jpg', title: '1-к квартира, 39 м², 7/10 эт.', price: '1 200 руб. за сутки', addressDistrict: 'Октябрьский р-н', addressStreet: 'Астраханская 179', date: 'Вчера, 23:45', description: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium ad architecto at consequatur eius eveniet incidunt iste itaque iure labore omnis quas quia, sunt, totam velit vero voluptate. Ab corporis deserunt, est illum impedit incidunt tenetur vitae. A dolorem dolorum eum illo, laboriosam neque nesciunt nihil officia, repellat tempora velit?', userName: 'марина', userAds: '8 объявлений'},{ img: 'https://via.placeholder.com/1300x800.jpg', title: 'Заголовок карточки', price: '2800', addressDistrict: 'Адрес карточки', addressStreet: 'Улица карточки', date: 'Вчера, 23:45', description: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus consectetur culpa cum eaque et eveniet harum id in itaque iusto laborum laudantium magnam modi mollitia nisi, odio saepe tenetur vel.', userName: 'светлана', userAds: '10 объявлений'}]
